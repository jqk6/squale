<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp">

	<display-name>squale</display-name>


	<!-- JRAF : initialization avec SPRING -->
	<context-param>	
		<param-name>contextConfigLocation</param-name>	
		<param-value>/WEB-INF/config/application-context-spring.xml</param-value>
	</context-param>
	<filter>
		<filter-name>SqualeFilter</filter-name>
		<display-name>SqualeFilter</display-name>
		<filter-class>com.airfrance.squaleweb.applicationlayer.action.SqualeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SqualeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>	
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	<!-- Action Servlet Configuration -->
	<servlet>
		<servlet-name>squale</servlet-name>
		<servlet-class>com.airfrance.squaleweb.servlet.SqualeServlet</servlet-class>
		
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/config/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
                        <!-- ENV-WEB-DEBUG -->
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
                        <!-- ENV-WEB-DETAIL -->
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>validate</param-name>
			<param-value>true</param-value>
		</init-param>
		
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
  		<servlet-name>DisplayChart</servlet-name> 
		<servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class> 
	</servlet>		
	
	
	<!-- Action Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>squale</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
  		<servlet-name>DisplayChart</servlet-name> 
		<url-pattern>/servlet/DisplayChart</url-pattern> 
	</servlet-mapping>	
	
	
	<!-- Page de dÃ©marrage -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>500</error-code>
		<location>/jsp/error.jsp</location>
	</error-page>


	<!-- Chemins vers les TLDS pour Welcom et Squale -->
	<taglib>
		<taglib-uri>/squale</taglib-uri>
		<taglib-location>/WEB-INF/tagsquale.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://www.airfrance.fr/welcom/tags-welcom</taglib-uri>
		<taglib-location>/WEB-INF/welcom.tld</taglib-location>
	</taglib>

	<!-- Datasource -->
	<resource-ref id="ResourceRef_1121848208081">
		<res-ref-name>jdbc/squale</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
	<!-- Chemin racine des logs -->
	<env-entry>
		<description>Chemin racine des logs</description>
		<env-entry-name>logDataRoot</env-entry-name>
                <!-- ENV-WEB-LOG-ROOT -->
		<env-entry-value>D:/logs</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>

</web-app>
