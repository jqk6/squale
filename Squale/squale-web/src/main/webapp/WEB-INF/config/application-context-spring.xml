<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
 "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- Bean pour retrouver un provider de façon statique, comme le permet le ProviderLocator de JRAF -->
	<bean id="springLocator" class="com.airfrance.jraf.bootstrap.locator.SpringLocator" ></bean>
	
	<bean id="persistence" class="com.airfrance.jraf.provider.persistence.hibernate.PersistenceProviderSpringImpl" 
		init-method="initialize">
		<property name="configFile">
			<value>/WEB-INF/config/hibernate.cfg.xml</value>
		</property>
		<!--property name="Jndi">	 	
			<value>false</value>	 	
		</property-->
	</bean>
	
	<bean id="logging" class="com.airfrance.jraf.provider.logging.LoggingProviderImpl"></bean>
	
	<!-- Provider d'acces aux applicationComponent POJO -->
	<bean id="accessdelegate" class="com.airfrance.jraf.provider.accessdelegate.AccessDelegateProviderSpringImpl" 
		init-method="initialize">
		<property name="configFile">
			<value>/WEB-INF/config/configApplicationComponent.xml</value>
		</property>
	</bean>
	
	<bean id="adhesion" class="com.airfrance.jraf.provider.adhesion.AdhesionProviderSpringImpl" 
		init-method="initialize">	 	
		<property name="configFile">		 
			<value>/WEB-INF/config/adhesion.cfg.xml</value>		 	 	
		</property>		
	</bean>
	
	<!-- Provider d'envoi de mail -->
	<bean id="mailer" class="com.airfrance.squalecommon.util.mail.xmedia.XmediaProviderSpringImpl" 
		init-method="initialize">
		<property name="configFile">
			<value>/WEB-INF/config/xmedia-config.xml</value>
		</property>
		<property name="appli">
				<!--ENV-PROVIDER_XMEDIA-->
			<value>SQUALE</value>
		</property>
	</bean>
	
	<!-- Enterprise layer's dependencies -->
	<!--<import resource="classpath:config/spring/0-entrepriselayer-dependencies.xml"/>-->
	
	<!-- Accesseur ldapBean d'Habile -->
	<bean id="userBeanAccessor" class="com.airfrance.squaleweb.connection.habile.UserBeanAccessorHabileImpl">
		<property name="userBean">
			<ref bean="userBean" />
		</property>
	</bean>
	
	<!-- bean utilisateur authentifié par Habile -->
	<bean id="userBean" class="com.airfrance.squaleweb.connection.habile.UserBeanHabileImpl" >
	</bean>
	
	
</beans>