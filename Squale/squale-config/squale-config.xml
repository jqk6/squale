<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//Squale//DTD Squalix Configuration 1.0//EN" "file:../com/airfrance/squalecommon/dtd/squalix-config-1.0.dtd">
<!--  Fichier de configuration de squalix définissant les profiles possibles, les différents types
	de récupération des sources,...
	La configuration des types de récupération des sources se fait par l'action dont le nom correspond à
	l'attribut name du tag sourcemanagement.
	Chaque profile doit commencer la tâche d'analyse de récupération des sources du projet et terminer
	par sa tâche de terminaison  -->
<configuration>
	<stoptimes>
		<stoptime day="monday" time="4:00"></stoptime>
		<stoptime day="tuesday" time="4:00"></stoptime>
		<stoptime day="wednesday" time="4:00"></stoptime>
		<stoptime day="thursday" time="4:00"></stoptime>
		<stoptime day="friday" time="4:00"></stoptime>
	</stoptimes>
	<!-- Paramétrage de la fréquence max des audits en fonction des accès -->
	<frequencies>
		<frequency days="5" frequency="5" />
		<frequency days="20" frequency="15" />
		<frequency days="45" frequency="30" />
	</frequencies>
	<tasks>
		<!-- taches obligatoires -->
		<task name="ScmTask" class="com.airfrance.squalix.tools.scm.task.ScmTask" standard="true"></task>
		<task name="ScmCleanerTask" class="com.airfrance.squalix.tools.scm.task.ScmCleanerTask" configurable="false"></task>		
		<task name="JCompilingTask" class="com.airfrance.squalix.tools.compiling.java.JCompilingTask" standard="true"></task>
		<task name="JCompilingCleanerTask" class="com.airfrance.squalix.tools.compiling.java.JCompilingCleanerTask" configurable="false"></task>
		<task name="JspCompilingTask" class="com.airfrance.squalix.tools.compiling.jsp.JspCompilingTask" standard="true"></task>
		<task name="SourceCodeAnalyserTask" class="com.airfrance.squalix.tools.sourcecodeanalyser.SourceCodeAnalyserTask" standard="true"></task>
		<task name="SourceCodeAnalyserCleanerTask" class="com.airfrance.squalix.tools.sourcecodeanalyser.SourceCodeAnalyserCleanerTask" configurable="false"></task>
		<task name="JavaMockCompilingTask" class="com.airfrance.squalix.tools.compiling.java.JavaMockCompilingTask" standard="true"></task>
		<task name="JavaMockCompilingCleanerTask" class="com.airfrance.squalix.tools.compiling.java.JavaMockCompilingCleanerTask" configurable="false"></task>
		<!-- taches facultatives -->
		<task name="ComputeResultTask" class="com.airfrance.squalix.tools.computing.project.ComputeResultTask" configurable="false" mandatory="false"></task>
		<task name="RulesCheckingTask" class="com.airfrance.squalix.tools.ruleschecking.RulesCheckingTask" mandatory="false"></task>
		<task name="CkjmTask" class="com.airfrance.squalix.tools.ckjm.CkjmTask" configurable="false" mandatory="false"></task>
		<task name="JDependTask" class="com.airfrance.squalix.tools.jdepend.JDependTask" configurable="false" mandatory="false"></task>
		<task name="MackerTask" class="com.airfrance.squalix.tools.macker.MackerTask" mandatory="false"></task>
		<task name="J2eeMackerTask" class="com.airfrance.squalix.tools.macker.J2eeMackerTask" mandatory="false"></task>
		<task name="CpdTask" class="com.airfrance.squalix.tools.cpd.CpdTask" configurable="false" mandatory="false"></task>
		<task name="PmdTask" class="com.airfrance.squalix.tools.pmd.PmdTask" mandatory="false"></task>
		<task name="JSPVolumetryTask" class="com.airfrance.squalix.tools.jspvolumetry.JSPVolumetryTask" configurable="false"></task>
		<task name="JavancssTask" class="com.airfrance.squalix.tools.javancss.JavancssTask" configurable="false" mandatory="false"></task>
		<!-- taches desactivees pour le moment -->
		<!--task name="UMLQualityTask" class="com.airfrance.squalix.tools.umlquality.UMLQualityTask" mandatory="false"></task-->
	</tasks>
	<sourcemanagements>
		<sourcemanagement name="Local">
			<analysis>
				<task-ref name="SourceCodeAnalyserTask"></task-ref>
			</analysis>
			<termination>
				<task-ref name="SourceCodeAnalyserCleanerTask"></task-ref>
			</termination>
		</sourcemanagement>
		<sourcemanagement name="Scm">
			<analysis>
				<task-ref name="ScmTask"></task-ref>
			</analysis>
			<termination>
				<task-ref name="ScmCleanerTask"></task-ref>
			</termination>
		</sourcemanagement>	
	</sourcemanagements>
	<profiles>
		<profile name="appli-jse">
			<integrityConstraints>
				<!-- Les grilles disponibles pour ce profil -->
				<grids>
					<grid name="squale-java-se"/>
				</grids>
				<!-- Les différentes configurations des graphiques -->
				<displayConfigurations>
					<!-- La configuration du scatterplot -->
					<bubble xtre="javancss.method.cnn" ytre="javancss.method.ncss" xPos="20" yPos="50" />
					<!-- La configuration de la volumétrie -->
					<volumetries>
						<!-- configuration du graphe de volumétrie niveau application -->
						<volumetry component="application">
							<tre name="javancss.project.numberOfCodeLines" />
						</volumetry>
						<!-- configuration de la volumétrie niveau projet -->
						<volumetry component="project">
							<tre name="javancss.project.numberOfCodeLines" />
							<tre name="javancss.project.numberOfCommentsLines" />
							<tre name="javancss.project.numberOfClasses" />
							<tre name="javancss.project.numberOfMethods" />
						</volumetry>
					</volumetries>
				</displayConfigurations>
			</integrityConstraints>
			<analysis>
				<task-ref name="JCompilingTask"></task-ref>
				<task-ref name="JDependTask"></task-ref>
				<task-ref name="CkjmTask"></task-ref>
				<task-ref name="RulesCheckingTask">
					<parameter name="ruleset" value="squale-conventions-1.1.0" />
				</task-ref>
				<task-ref name="MackerTask"></task-ref>
				<task-ref name="PmdTask">
					<parameter name="language" value="java" />
					<parameter name="javaruleset" value="squale-pmd-java-1.0.0" />
				</task-ref>
				<task-ref name="CpdTask">
					<parameter name="language" value="java" />
				</task-ref>
				<task-ref name="JavancssTask"></task-ref>
			</analysis>
			<termination>
				<task-ref name="JCompilingCleanerTask"></task-ref>
				<task-ref name="ComputeResultTask"></task-ref>
			</termination>
		</profile>
		<profile name="appli-jee">
			<integrityConstraints>
				<!-- Les grilles disponibles pour ce profil -->
				<grids>
					<grid name="squale-java-ee"/>
				</grids>
				<!-- Les différentes configurations des graphiques -->
				<displayConfigurations>
					<!-- La configuration du scatterplot -->
					<bubble xtre="javancss.method.cnn" ytre="javancss.method.ncss" xPos="10" yPos="7" />
					<!-- La configuration de la volumétrie -->
					<volumetries>
						<!-- configuration du graphe de volumétrie niveau application -->
						<volumetry component="application">
							<tre name="javancss.project.numberOfCodeLines" />
							<tre name="jspvolumetry.project.numberOfJSPCodeLines" />
						</volumetry>
						<!-- configuration de la volumétrie niveau projet -->
						<volumetry component="project">
							<tre name="javancss.project.numberOfCodeLines" />
							<tre name="javancss.project.numberOfCommentsLines" />
							<tre name="javancss.project.numberOfClasses" />
							<tre name="javancss.project.numberOfMethods" />
							<tre name="jspvolumetry.project.numberOfJSPCodeLines" />
							<tre name="jspvolumetry.project.numberOfJSP" />
						</volumetry>
					</volumetries>
				</displayConfigurations>
			</integrityConstraints>
			<analysis>
				<task-ref name="JSPVolumetryTask"></task-ref>
				<task-ref name="JCompilingTask"></task-ref>
				<task-ref name="JDependTask"></task-ref>
				<task-ref name="CkjmTask"></task-ref>
				<task-ref name="RulesCheckingTask">
					<parameter name="ruleset" value="squale-conventions-1.1.0" />
				</task-ref>
				<task-ref name="JavancssTask"></task-ref>
				<task-ref name="MackerTask"></task-ref>
				<task-ref name="PmdTask">
					<parameter name="language" value="java" />
					<parameter name="javaruleset" value="squale-pmd-java-1.0.0" />
					<parameter name="language" value="jsp" />
					<parameter name="jspruleset" value="squale-pmd-jsp-1.0.0" />
				</task-ref>
				<task-ref name="CpdTask">
					<parameter name="language" value="java" />
					<parameter name="language" value="jsp" />
				</task-ref>
			</analysis>
			<termination>
				<task-ref name="ComputeResultTask"></task-ref>
				<task-ref name="JCompilingCleanerTask"></task-ref>
			</termination>
		</profile>
	</profiles>
	<admin-params>
		<mail>
			<admin-mailing-list>--</admin-mailing-list><!-- mandatory -->
			<!--<smtp-server></smtp-server>-->
			<!--<sender-address></sender-address>-->
			<!--<smtp-authent-needed></smtp-authent-needed>--><!-- true or false. False by default -->
			<!--<smtp-username></smtp-username>-->
			<!--<smtp-password></smtp-password>-->
		</mail>
	</admin-params>
</configuration>