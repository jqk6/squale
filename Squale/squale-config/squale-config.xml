					</project>
					<class>
						<loc>JavancssTask.ncss</loc>
						<number-of-methods>JavancssTask.methods</number-of-methods>
					</class>
					<method>
						<loc>JavancssTask.ncss</loc>
						<vg>JavancssTask.ccn</vg>
					</method>
				</java>
			</mapping>
		</shared-repository-export-->
	</admin-params>
</configuration>