<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>batch-package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/target</directory>
			<includes>
				<include>${pom.artifactId}-${pom.version}.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assembly/resources</directory>
			<excludes>
				<!-- we don't want go.sh to be filtered, as it would have Win EOL -->
				<exclude>go.sh</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assembly/resources</directory>
			<includes>
				<include>go.sh</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>org.squale.app:squalix</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>