<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- ********************************* -->
<!-- Bridge Ant 2 Maven used by Squale -->
<!-- ********************************* -->

<project name="Squale" basedir="." default="build-all">

	<property name="SqualeClassesDir" location="${basedir}/../target/classes"/>
  
	<path id="SqualeClasspath">
	</path>
	
	<target name="build-all">
		<exec executable="mvn" dir="${basedir}/../../squale" failonerror="true">
			<!-- we do not call "clean install" because it is supposed 		-->
			<!-- to have already been done in the analysis of "squale-core" -->
			<arg value="validate"/>
		</exec>
	</target>

</project>
