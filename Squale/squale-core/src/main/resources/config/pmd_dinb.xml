<?xml version="1.0"?>
<ruleset name="af.java.default" language="java"
    xmlns="http://pmd.sf.net/ruleset/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
    xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">

  <description>
  This ruleset checks my code for bad stuff
  </description>

  <!-- We'll use the entire 'strings' ruleset -->
  <rule ref="rulesets/controversial.xml/SingularField" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="info"/>
    </properties>
  </rule>
  <rule ref="rulesets/coupling.xml/LooseCoupling" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="warning"/>
    </properties>
  </rule>
  <rule ref="rulesets/design.xml/AbstractClassWithoutAbstractMethod" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="info"/>
    </properties>
  </rule>
  <rule ref="rulesets/design.xml/CompareObjectsWithEquals" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="error"/>
    </properties>
  </rule>
  <rule ref="rulesets/design.xml/PreserveStackTrace" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="warning"/>
    </properties>
  </rule>
  <rule ref="rulesets/j2ee.xml/UseProperClassLoader" >
    <properties>
        <property name="squaleCategory" value="programmingstandard"/>
        <property name="squaleSeverity" value="warning"/>
    </properties>
  </rule>

</ruleset>