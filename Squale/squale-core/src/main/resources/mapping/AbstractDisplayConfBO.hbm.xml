<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.web.AbstractDisplayConfBO"
        table="displayConf"
        lazy="true"
        mutable="true"
        discriminator-value="AbstractDisplayConfBO"
    >

        <id
            name="id"
            column="ConfId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">displayconf_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AbstractDisplayConfBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <discriminator
            column="subclass"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AbstractDisplayConfBO.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.web.VolumetryConfBO"
            lazy="true"
            discriminator-value="volumetry"
        >
        <property
            name="componentType"
            type="string"
            update="true"
            insert="true"
            column="componentType"
        />

        <set
            name="tres"
            table="Volumetry_Measures"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="VolumetryId"
            >
            </key>

            <element
                column="Measure"
                type="string"
                not-null="true"
                unique="false"
            />

        </set>

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-VolumetryConfBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.web.BubbleConfBO"
            lazy="true"
            discriminator-value="bubble"
        >
        <property
            name="XTre"
            type="string"
            update="true"
            insert="true"
            column="X_TRE"
            length="400"
        />

        <property
            name="YTre"
            type="string"
            update="true"
            insert="true"
            column="Y_TRE"
            length="400"
        />

        <property
            name="horizontalAxisPos"
            type="long"
            update="true"
            insert="true"
            column="X_POS"
            length="3"
        />

        <property
            name="verticalAxisPos"
            type="long"
            update="true"
            insert="true"
            column="Y_POS"
            length="3"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-BubbleConfBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>

    </class>

</hibernate-mapping>
