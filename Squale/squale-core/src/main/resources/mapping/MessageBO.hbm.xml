<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.message.MessageBO"
        table="Message"
        mutable="true"
    >

        <composite-id
            name="id"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.message.MessageId"
        >
                     <key-property
                        name="key"
                        type="java.lang.String"
                        column="key"
                />

                     <key-property
                        name="lang"
                        type="java.lang.String"
                        column="lang"
                        length="6"
                />

        </composite-id>

        <property
            name="title"
            type="string"
            update="true"
            insert="true"
            column="Title"
            length="4000"
        />

        <property
            name="text"
            type="string"
            update="true"
            insert="true"
            column="Text"
            length="4000"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MessageBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
