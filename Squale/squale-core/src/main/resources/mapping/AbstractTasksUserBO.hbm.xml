<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.AbstractTasksUserBO"
        table="Tasks_User"
        lazy="true"
        discriminator-value="AbstractTasksUser"
    >

        <id
            name="id"
            column="AbstractTasksUserId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">tasksUser_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AbstractTasksUserBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <discriminator
            column="subclass"
        />

        <list
            name="analysisTasks"
            table="Analysis_Task"
            lazy="false"
            cascade="all"
        >

            <key
                column="TasksUserId"
            >
            </key>

            <index
                column="AnalysisTaskIndex"
                type="int"
                length="10"
            />

            <many-to-many
                class="com.airfrance.squalecommon.enterpriselayer.businessobject.config.TaskRefBO"
                column="TaskRefId"
                outer-join="auto"
             />

        </list>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="Name"
            length="255"
            not-null="true"
            unique="true"
        />

        <list
            name="terminationTasks"
            table="Termination_Task"
            lazy="false"
            cascade="all"
        >

            <key
                column="TasksUserId"
            >
            </key>

            <index
                column="TerminationTaskIndex"
                type="int"
                length="10"
            />

            <many-to-many
                class="com.airfrance.squalecommon.enterpriselayer.businessobject.config.TaskRefBO"
                column="TaskRefId"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AbstractTasksUserBO.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.SourceManagementBO"
            lazy="false"
            discriminator-value="SourceManagement"
        >
        <property
            name="milestoneAudit"
            type="boolean"
            update="true"
            insert="true"
            column="MilestoneAudit"
        />

        <property
            name="normalAudit"
            type="boolean"
            update="true"
            insert="true"
            column="NormalAudit"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-SourceManagementBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.ProjectProfileBO"
            lazy="true"
            discriminator-value="Profile"
        >

        <set
            name="profileDisplayConfs"
            table="Profiles_DisplayConfs"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
        >

            <key
                column="ProfileId"
            >
            </key>

            <one-to-many
                  class="com.airfrance.squalecommon.enterpriselayer.businessobject.config.Profile_DisplayConfBO"
            />

        </set>

        <set
            name="grids"
            table="Profiles_Grids"
            lazy="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="ProfileId"
            >
            </key>

            <many-to-many
                class="com.airfrance.squalecommon.enterpriselayer.businessobject.rule.QualityGridBO"
                column="GridId"
                outer-join="auto"
             />

        </set>

        <property
            name="exportIDE"
            type="boolean"
            update="true"
            insert="true"
            column="export_IDE"
            unique="false"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-ProjectProfileBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>

    </class>

</hibernate-mapping>
