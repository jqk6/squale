<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.profile.ProfileBO"
        table="ProfileBO"
        mutable="true"
    >

        <id
            name="id"
            column="ProfileId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">profile_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ProfileBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="Name"
        />

        <map
            name="rights"
            table="Profile_Rights"
            lazy="true"
            sort="unsorted"
            cascade="none"
        >

            <key
                column="ProfileId"
            >
            </key>

            <index-many-to-many
                class="com.airfrance.squalecommon.enterpriselayer.businessobject.profile.AtomicRightsBO"
                column="AtomicRightsId"
            />

            <element
                column="Rights_Value"
                type="string"
                not-null="false"
                unique="false"
            />

        </map>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ProfileBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
