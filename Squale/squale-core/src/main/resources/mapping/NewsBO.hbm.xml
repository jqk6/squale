<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.message.NewsBO"
        table="News"
        mutable="true"
    >

        <id
            name="id"
            column="Id"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">news_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-NewsBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="key"
            type="string"
            update="true"
            insert="true"
            column="Key"
            length="4000"
            not-null="true"
        />

        <property
            name="beginningDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Beginning_Date"
            not-null="true"
            unique="false"
        />

        <property
            name="endDate"
            type="timestamp"
            update="true"
            insert="true"
            column="End_Date"
            not-null="true"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-NewsBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
