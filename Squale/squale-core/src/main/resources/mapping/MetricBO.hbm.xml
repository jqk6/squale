        />

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="Name"
            not-null="false"
            unique="false"
        />

        <many-to-one
            name="measure"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.result.MeasureBO"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="MeasureId"
        />

