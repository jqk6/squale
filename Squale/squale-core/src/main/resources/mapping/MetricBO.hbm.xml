            discriminator-value="Str"
        >
        <property
            name="value"
            type="string"
            update="true"
            insert="true"
            column="String_val"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-StringMetricBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.result.BinaryMetricBO"
