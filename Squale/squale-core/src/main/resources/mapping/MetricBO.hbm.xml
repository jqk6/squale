            name="com.airfrance.squalecommon.enterpriselayer.businessobject.result.BooleanMetricBO"
            discriminator-value="Bool"
        >
        <property
            name="value"
            type="boolean"
            update="true"
            insert="true"
            column="Boolean_val"
            not-null="false"
            unique="false"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
