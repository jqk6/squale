<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.rule.AbstractFormulaBO"
        table="Formula"
        discriminator-value="AbstractFormula"
    >

        <id
            name="id"
            column="FormulaId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">formula_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AbstractFormulaBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <discriminator
            column="subclass"
            not-null="true"
            type="string"
        />

        <property
            name="componentLevel"
            type="string"
            update="true"
            insert="true"
            column="ComponentLevel"
            not-null="false"
            unique="false"
        />

        <property
            name="triggerCondition"
            type="string"
            update="true"
            insert="true"
            column="TriggerCondition"
            length="4000"
            not-null="false"
            unique="false"
        />

        <bag
            name="measureKinds"
            table="Formula_Measures"
            lazy="false"
            cascade="none"
        >

            <key
                column="FormulaId"
            >
            </key>

            <element
                column="Measure"
                type="string"
                not-null="false"
                unique="false"
            />

      </bag>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AbstractFormulaBO.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rule.ConditionFormulaBO"
            discriminator-value="ConditionFormula"
        >

        <list
            name="markConditions"
            table="Formula_Conditions"
            lazy="false"
            cascade="none"
        >

            <key
                column="FormulaId"
            >
            </key>

            <index
                column="Rank"
                type="long"
                length="19"
            />

            <element
                column="Value"
                type="string"
                length="4000"
                not-null="false"
                unique="false"
            />

        </list>

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-ConditionFormulaBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rule.SimpleFormulaBO"
            discriminator-value="SimpleFormula"
        >

        <property
            name="formula"
            type="string"
            update="true"
            insert="true"
            column="Formula"
            length="4000"
            not-null="false"
            unique="false"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-SimpleFormulaBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>

    </class>

</hibernate-mapping>
