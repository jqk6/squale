<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.config.TaskRefBO"
        table="TaskRef"
        lazy="true"
    >

        <id
            name="id"
            column="TaskRefId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">taskRef_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TaskRefBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <bag
            name="parameters"
            table="TaskParameter"
            lazy="true"
            cascade="all"
        >

            <key
                column="TaskRefId"
            >
            </key>

            <one-to-many
                  class="com.airfrance.squalecommon.enterpriselayer.businessobject.config.TaskParameterBO"
            />

      </bag>

        <many-to-one
            name="task"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.config.TaskBO"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="TaskId"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TaskRefBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
