<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.RuleSetBO"
        table="RuleSet"
        mutable="true"
    >

        <id
            name="id"
            column="RuleSetId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">RuleSet_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RuleSetBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <discriminator
            column="subclass"
        />

        <map
            name="rules"
            lazy="true"
            sort="unsorted"
            cascade="all"
        >

            <key
                column="RuleSetId"
            >
            </key>

            <index
                column="Code"
                type="string"
            />

            <one-to-many
                  class="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.RuleBO"
            />

        </map>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="Name"
            not-null="false"
            unique="false"
        />

        <property
            name="dateOfUpdate"
            type="timestamp"
            update="true"
            insert="true"
            column="DateOfUpdate"
            not-null="true"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-RuleSetBO.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.checkstyle.CheckstyleRuleSetBO"
            discriminator-value="Checkstyle"
        >
        <property
            name="value"
            type="com.airfrance.jraf.provider.persistence.hibernate.BinaryBlobType"
            update="true"
            insert="true"
            column="FileContent"
            not-null="false"
            unique="false"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-CheckstyleRuleSetBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.pmd.PmdRuleSetBO"
            discriminator-value="Pmd"
        >
        <property
            name="value"
            type="com.airfrance.jraf.provider.persistence.hibernate.BinaryBlobType"
            update="true"
            insert="true"
            column="FileContent"
            not-null="false"
            unique="false"
        />

        <property
            name="language"
            type="string"
            update="true"
            insert="true"
            column="Language"
            not-null="false"
            unique="false"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-PmdRuleSetBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.cpptest.CppTestRuleSetBO"
            discriminator-value="CppTest"
        >
        <property
            name="cppTestName"
            type="string"
            update="true"
            insert="true"
            column="CppTestName"
            not-null="false"
            unique="true"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-CppTestRuleSetBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.ProjectRuleSetBO"
            discriminator-value="ProjectRuleSet"
        >

        <many-to-one
            name="project"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.component.ProjectBO"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="ProjectId"
        />

	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-ProjectRuleSetBO.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>

    </class>

</hibernate-mapping>
