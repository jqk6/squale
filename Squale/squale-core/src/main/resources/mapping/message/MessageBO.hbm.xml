<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class mutable="true" table="Message" name="com.airfrance.squalecommon.enterpriselayer.businessobject.message.MessageBO">
    <composite-id name="id" class="com.airfrance.squalecommon.enterpriselayer.businessobject.message.MessageId">
      <key-property name="key" column="key" type="java.lang.String"/>
      <key-property name="lang" column="lang" type="java.lang.String" length="6"/>
    </composite-id>
    <property name="title" length="4000" column="Title" update="true" type="string" insert="true"/>
    <property name="text" length="4000" column="Text" update="true" not-null="true" type="string" insert="true"/>
  </class>
</hibernate-mapping>
