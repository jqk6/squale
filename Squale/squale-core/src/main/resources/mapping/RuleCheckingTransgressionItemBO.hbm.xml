<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.result.rulechecking.RuleCheckingTransgressionItemBO"
        table="RuleCheckingTransgressionItem"
        lazy="true"
        mutable="true"
    >

        <id
            name="id"
            column="ItemId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">TransgressionItem_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RuleCheckingTransgressionItemBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="line"
            type="int"
            update="true"
            insert="true"
            column="Line"
            length="10"
            not-null="true"
        />

        <property
            name="componentFile"
            type="string"
            update="true"
            insert="true"
            column="Path"
            length="3000"
        />

        <property
            name="message"
            type="string"
            update="true"
            insert="true"
            column="Message"
            length="3000"
            not-null="true"
            unique="false"
        />

        <many-to-one
            name="component"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.component.AbstractComponentBO"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="ComponentId"
        />

        <many-to-one
            name="rule"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.rulechecking.RuleBO"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="RuleId"
            not-null="true"
        />

        <many-to-one
            name="componentInvolved"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.component.AbstractComponentBO"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="ComponentInvolvedId"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-RuleCheckingTransgressionItemBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
