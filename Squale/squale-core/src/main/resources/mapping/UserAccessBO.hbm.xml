<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.airfrance.squalecommon.enterpriselayer.businessobject.access.UserAccessBO"
        table="UserAccess"
        lazy="true"
        mutable="true"
    >

        <id
            name="id"
            column="UserAccessId"
            type="long"
            length="19"
            unsaved-value="-1"
        >
            <generator class="native">
                <param name="sequence">userAccess_sequence</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-UserAccessBO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="application"
            class="com.airfrance.squalecommon.enterpriselayer.businessobject.component.ApplicationBO"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ApplicationId"
            not-null="true"
        />

        <property
            name="date"
            type="timestamp"
            update="true"
            insert="true"
            column="accessDate"
            not-null="true"
        />

        <property
            name="matricule"
            type="string"
            update="true"
            insert="true"
            column="matricule"
            length="1024"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-UserAccessBO.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
