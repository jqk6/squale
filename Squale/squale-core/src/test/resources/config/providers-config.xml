<?xml version="1.0" encoding="UTF-8"?>
<providers>

	<!-- Provider hibernate -->
	<provider id="persistence" class="com.airfrance.jraf.provider.persistence.hibernate.Initializer" description="">
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/hibernate.cfg.xml</param-value>
		</init-param>
		<init-param>
			<param-name>containerManagedTransaction</param-name>
			<param-value>false</param-value>
		</init-param>

		<load-on-startup>2</load-on-startup>
	</provider>


	<!-- Provider d'acces aux applicationComponent -->
	<provider id="accessdelegate" class="com.airfrance.jraf.provider.accessdelegate.Initializer" description="Mecanisme d'access aux ApplicationComponent">
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/configApplicationComponent.xml</param-value>
		</init-param>
	</provider>
	
<!-- Provider bootstrap -->
	<provider id="bootstrap" 
		class="com.airfrance.jraf.bootstrap.BootstrapInitializer" 
		description="Initializer du bootstrap">
	</provider>
</providers>
