<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="@app-name@ @app-version@" location="applications"/>

    <shortcut
            name="Demarrer @app-name@"
            description="Lance la version standalone de Squale"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/start-Squale.bat"
            iconFile="$INSTALL_PATH/icons/win/start.ico">
		<createForPack name="core"/>
    </shortcut>

    <shortcut
            name="Arreter @app-name@"
            description="Stoppe tous les processus de la version standalone de Squale"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/stop-Squale.bat"
            iconFile="$INSTALL_PATH/icons/win/stop.ico">
		<createForPack name="core"/>
    </shortcut>

    <shortcut
            name="Ouvrir le portail Squale"
			description="Ouvre l'interface Web de Squale dans un navigateur"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://localhost:8080/squale-web"
            iconFile="$INSTALL_PATH/icons/win/squale-web.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Site officiel"
            description="Aller sur le site web officiel de Squale"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://www.squale.org"
            iconFile="$INSTALL_PATH/icons/win/site-squale.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Documentation utilisateur"
            description="Documentation utilisateur en ligne"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://www.squale.org/squale-user-site/index.html"
            iconFile="$INSTALL_PATH/icons/win/documentation.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Fichiers de configuration"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH/config_files"
            iconFile="$INSTALL_PATH/icons/win/configuration.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Desintallation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH/Uninstaller/uninstaller.jar"
            iconFile="$INSTALL_PATH/icons/win/uninstall.ico">
		<createForPack name="core"/>
    </shortcut>
</shortcuts>
