<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="@app-name@ @app-version@" location="applications"/>

    <shortcut
            name="Demarrer @app-name@"
            description="Lance la version standalone de Squale"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="yes"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/start-Squale.sh"
            iconFile="$INSTALL_PATH/icons/unix/start.png"
            type="Application"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Arreter @app-name@"
            description="Stoppe tous les processus de la version standalone de Squale"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="yes"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/stop-Squale.sh"
            iconFile="$INSTALL_PATH/icons/unix/stop.png"
            type="Application"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>

    <shortcut
            name="Ouvrir le portail Squale"
			description="Ouvre l'interface Web de Squale dans un navigateur"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="yes"
            startup="no"
            target="http://localhost:8080/squale-web"
            iconFile="$INSTALL_PATH/icons/unix/squale-web.png"
            type="Link"
            url="http://localhost:8080/squale-web"
            encoding="UTF-8"
            createForAll="false">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Site officiel"
            description="Aller sur le site web officiel de Squale"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="yes"
            startup="no"
            target="http://www.squale.org"
            iconFile="$INSTALL_PATH/icons/unix/site-squale.png"
            type="Link"
            url="http://www.squale.org"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Documentation utilisateur"
            description="Documentation utilisateur en ligne"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="yes"
            startup="no"
            target="http://www.squale.org/squale-user-site/index.html"
            iconFile="$INSTALL_PATH/icons/unix/documentation.png"
            type="Link"
            url="http://www.squale.org/squale-user-site/index.html"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Fichiers de configuration"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="yes"
            startup="no"
            target="$INSTALL_PATH/config_files"
            iconFile="$INSTALL_PATH/icons/unix/configuration.png"
            type="Link"
            url="$INSTALL_PATH/config_files"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Desintallation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="yes"
            startup="no"
            target="java"
            iconFile="$INSTALL_PATH/icons/unix/uninstall.png"
            commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
            initialState="noShow"
            type="Application"
            encoding="UTF-8"
            createForAll="false">
        <createForPack name="core"/>
    </shortcut>
</shortcuts>
