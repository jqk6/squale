<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="@app-name@ @app-version@" location="applications"/>

    <shortcut
            name="Start @app-name@"
            description="Launches the standalone version of Squale"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/start-Squale.bat"
            iconFile="$INSTALL_PATH/icons/win/start.ico">
		<createForPack name="core"/>
    </shortcut>

    <shortcut
            name="Stop @app-name@"
            description="Stops all processes of the standalone version of Squale"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/stop-Squale.bat"
            iconFile="$INSTALL_PATH/icons/win/stop.ico">
		<createForPack name="core"/>
    </shortcut>

    <shortcut
            name="Open Squale Web Portal"
            description="Opens the web interface of Squale in a browser"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://localhost:8080/squale-web"
            iconFile="$INSTALL_PATH/icons/win/squale-web.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Official Squale site"
            description="Go to Squale web official site"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://www.squale.org"
            iconFile="$INSTALL_PATH/icons/win/site-squale.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="User Documentation"
            description="Online user documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="http://www.squale.org/squale-user-site/index.html"
            iconFile="$INSTALL_PATH/icons/win/documentation.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Configuration files"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH/config_files"
            iconFile="$INSTALL_PATH/icons/win/configuration.ico">
		<createForPack name="core"/>
    </shortcut>
    
    <shortcut
            name="Uninstall"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH/Uninstaller/uninstaller.jar"
            iconFile="$INSTALL_PATH/icons/win/uninstall.ico">
		<createForPack name="core"/>
    </shortcut>
</shortcuts>
